{
  "name": "di-ipv-cri-uk-passport-front",
  "version": "0.0.1",
  "description": "DCS Credential Issuer user interface for the Identity Proofing and Verification (IPV) system within the GDS digital identity platform, GOV.UK Sign In.",
  "main": "src/server.js",
  "engine": {
    "node": "16.8.0",
    "yarn": "1.22.10"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "yarn build-sass && yarn copy-assets",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/stylesheets/application.css --style compressed",
    "copy-assets": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ src/locales/**/** dist/ && copyfiles -u 3 src/assets/javascripts/*.js dist/public/javascripts",
    "test": "mocha",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/di-ipv-cri-uk-passport-front.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alphagov/di-ipv-cri-uk-passport-front/issues"
  },
  "homepage": "https://github.com/alphagov/di-ipv-cri-uk-passport-front#readme",
  "devDependencies": {
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "copyfiles": "2.4.1",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.2",
    "lint-staged": "11.2.3",
    "mocha": "9.1.3",
    "nodemon": "2.0.13",
    "prettier": "2.4.1",
    "sass": "1.43.4",
    "sinon": "11.1.2",
    "sinon-chai": "3.7.0"
  },
  "dependencies": {
    "axios": "0.24.0",
    "cfenv": "1.2.4",
    "dotenv": "^10.0.0",
    "express": "4.17.1",
    "govuk-frontend": "3.14.0",
    "hmpo-app": "1.0.2",
    "hmpo-components": "4.6.0",
    "hmpo-config": "2.2.0",
    "hmpo-form-wizard": "11.11.0",
    "hmpo-i18n": "5.0.1",
    "hmpo-logger": "4.1.3",
    "jsonwebtoken": "8.5.1",
    "nunjucks": "3.2.3"
  }
}
